%article.video_category
  %header
    %h2 Restaurants
  .videos.row
    - @businesses.each do |business|
      .video.col-sm-2
        = link_to business_path(business), nil do
          #{business.name}
          %img(src="#{business.image_url}")

%section.reviews
  %header
    %h3 Recent Reviews
  %ul
    - Review.recent_reviews.each do |review|
      %article.review
        %li.row
          .col-sm-3
            %p #{link_to review.business.name, business_path(review.business)} by #{link_to review.user.full_name, user_path(review.user)}
          .col-sm-8
            %p= review.content