%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @business, layout: :horizontal, control_col: "col-sm-6" do |f|
        %h3 Add New Business
        %br
        %fieldset
          = f.text_field :name, label: "Business Name"
          = f.text_area :description, label: "Description"
          = f.select :image_url, [["Mexican", '/tmp/chipotle.jpg'], ["Coffee", '/tmp/starbucks.jpg'], ["Chinese", '/tmp/panda_express.jpg']], {label: "Choose an image" }, { class: 'selectpicker' }
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit "Register Business", class: 'btn btn-default'
